            "name": "application-name",
            "in": "query",
            "description": "The name of the application.",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Zaakafhandelcomponent"
            },
            "example": "Zaakafhandelcomponent"
          },
          {
            "name": "application-role-name",
            "in": "query",
            "description": "The name of the application role.",
            "required": true,
